rules_version = '2';
service cloud.firestore {
	match /databases/{database}/documents {  
		match /tabs/{tab} {
  		allow read, update: if request.auth.uid == resource.data.user
      allow create: if request.auth.uid != null
  	}
    
    match /tasks/{task} {
  		allow read, update: if request.auth.uid == resource.data.user
      allow create: if request.auth.uid != null
  	}
  }
}